{% if postslist.length >= 1 %}
	<p>{{ postslist.length }} {{ "inl√§gg" | swedishPluralize(postslist.length) }}</p>
{% endif %}

<section>

	{% for post in postslist | reverse %}

		<article>

			<a href="{{ post.url | url }}">

				{% if post.data.image %}
					{% generateImage post.data.image, (post.data.imageAltText or post.data.title), "90vw" %}
				{% endif %}

				<h3>{{ post.data.title }}</h3>
				
			</a>
			
			<time datetime="{{ post.date | machineDate }}">
				<small>{{ post.date | readableDate }} av <a href="/forfattare/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
			</time>

		</article>
	{% endfor %}
</section>
